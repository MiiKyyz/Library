<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:elevation="1500dp"
        android:layout_margin="30dp"
        android:background="@drawable/PanelDesign"
        android:id="@+id/Page">
        <ScrollView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout2">
                <TextView
                    android:text="@string/title_short"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:layout_margin="10dp"
                    android:textColor="@color/short_desc"
                    android:fontFamily="serif"
                    android:textStyle="bold|italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_txt" />

                <TextView
                    android:text="@string/author_short"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="serif"
                    android:textColor="@color/short_desc"
                    android:id="@+id/author_txt" />
                <TextView
                    android:text="@string/story_short"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/short_desc"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    android:lineSpacingExtra="10dp"
                    android:justificationMode="inter_word"
                    android:layout_margin="15dp"
                    android:id="@+id/story_txt" />
                <TextView
                    android:text="@string/moral_short"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:fontFamily="serif"
                    android:textStyle="bold|italic"
                    android:textColor="@color/short_desc"
                    android:lineSpacingExtra="10dp"
                    android:layout_margin="15dp"/>



                <TextView
                    android:text="@string/moral_title_short"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:fontFamily="serif"
                    android:textColor="@color/short_desc"
                    android:lineSpacingExtra="10dp"
                    android:layout_margin="15dp"
                    android:id="@+id/moral_txt" />



            </LinearLayout>
        </ScrollView>
        
       
    </LinearLayout>
    
    <Button
        android:text="@string/btn_short"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0"
        android:id="@+id/btn_Search" />
    

</LinearLayout>
